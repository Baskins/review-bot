{

  "autoassign": {
    "path": "./src/plugins/autoassign",
    "dependencies": [
      "events",
      "logger",
      "review",
      "pull-request-review"
    ]
  },

  "project-config": {
    "path": "./src/plugins/project-config",
    "dependencies": [
      "events",
      "logger",
      "github",
      "command-add",
      "team-dispatcher"
    ]
  },

  "pull-request-complexity-addon": {
    "path": "./src/plugins/complexity/addon"
  },

  "#comment:staff": {
    "path": "./src/plugins/staff",
    "options": {
      "cache": {
        "getGroupMembers": 86400
      },
      "center_url": "https://center.yandex-team.ru/api/v1/",
      "jabber_url": "https://center.yandex-team.ru/jabber/status-bulk/",
      "fields": {
        "absence": [
          "left_edge",
          "right_edge",
          "gap_type__name",
          "gap_type__verbose_name",
          "staff__login"
        ],
        "where": [
          "staff__login",
          "updated_at",
          "is_vpn",
          "office__code",
          "office__name",
          "office__city__name"
        ],
        "info": [
          "first_name",
          "login",
          "last_name",
          "work_email",
          "office",
          "city",
          "position",
          "birthday",
          "uid",
          "family_status",
          "phones",
          "cars",
          "mobile_phone"
        ],
        "group": ["login"]
      }
    }
  },

  "#comment:startrek": {
    "path": "./src/plugins/startrek",
    "options": {
      "url": "https://st-api.yandex-team.ru/v2"
    }
  },

  "#comment:#include:startrek": "./default-startrek.json"

}
