{

  "startup_timeout": 10000,

  "shutdown_timeout": 5000,

  "services": {

    "queue": {
      "path": "./src/services/queue"
    },

    "events": {
      "path": "./src/services/events"
    },

    "logger": {
      "path": "./src/services/logger",
      "options": {
        "formatters": {
          "default": {
            "format": "[%(date)s] %(name)s %(levelname)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S.%L%z",
            "colorize": true
          }
        },
        "handlers": {
          "terminal": {
            "class": "intel/handlers/console",
            "level": "VERBOSE",
            "formatter": "default"
          }
        },
        "loggers": {
          "root": {
            "level": "INFO",
            "handlers": ["terminal"],
            "exitOnError": false,
            "handleExceptions": true
          }
        }
      }
    },

    "github": {
      "path": "./src/services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "version": "3.0.0",
        "timeout": 5000,
        "protocol": "https",
        "headers": {
          "user-agent": "DevExp/2.0.0"
        }
      },
      "dependencies": []
    },

    "http": {
      "path": "./src/services/http",
      "options": {
        "port": "8080",
        "routes": {
        }
      },
      "dependencies": [
        "logger"
      ]
    }

  }

}
