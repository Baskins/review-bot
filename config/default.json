{
  "cluster": {
    "workers": 4
  },
  "services": {
    "events": {
      "path": "./services/events"
    },
    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": [
          { "name": "console", "timestamp": true, "colorize": true }
        ]
      }
    },
    "mongoose": {
      "path": "./services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },
    "model": {
      "path": "./services/model",
      "options": {
        "addons": {
          "pull_request": [
            "./services/complexity/addon",
            "./services/pull-request-github/addon"
          ]
        }
      },
      "dependencies": ["mongoose"]
    },
    "github": {
      "path": "./services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "version": "3.0.0",
        "protocol": "https",
        "timeout": 5000,
        "headers": {
          "user-agent": "DevKit-App"
        }
      },
      "dependencies": []
    },
    "team-github": {
      "path": "./services/team-github",
      "options": {
        "team": "owners"
      },
      "dependencies": [
        "github"
      ]
    },
    "team-static": {
      "path": "./services/team-static",
      "options": {
        "members": [
          "artems",
          "d4rkr00t",
          "mishanga",
          "sbmaxx"
        ]
      }
    },
    "choose-team": {
      "path": "./services/choose-team",
      "options": {
        "routes": [
          { "team-github": ["*/*"] }
        ]
      },
      "dependencies": [
        "logger",
        "team-github"
      ]
    },
    "pull-request-github": {
      "path": "./services/pull-request-github",
      "options": {
        "separator": {
          "top": "<div id='devexp-content-top'></div><hr>",
          "bottom": "<div id='devexp-content-bottom'></div>"
        }
      },
      "dependencies": [
        "github",
        "model"
      ]
    },
    "pull-request-action": {
      "path": "./services/pull-request-action",
      "dependencies": [
        "events",
        "logger",
        "model"
      ]
    },
    "http": {
      "path": "./services/http",
      "options": {
        "port": "8080",
        "routes": {
          "/api": "http-routes-client",
          "/badges": "http-routes-badges",
          "/github": "http-routes-github"
        }
      },
      "dependencies": [
        "logger",
        "http-routes-client",
        "http-routes-badges",
        "http-routes-github"
      ]
    },
    "http-routes-client": {
      "path": "./services/client/routes",
      "dependencies": [
        "model",
        "logger",
        "choose-reviewer",
        "pull-request-action"
      ]
    },
    "http-routes-badges": {
      "path": "./services/badge-constructor/routes",
      "options": {
        "template": "flat"
      },
      "dependencies": [
        "logger"
      ]
    },
    "http-routes-github": {
      "path": "./services/pull-request-github/routes",
      "dependencies": {
        "model": "model",
        "events": "events",
        "logger": "logger",
        "github": "pull-request-github",
        "choose-reviewer": "choose-reviewer",
        "pull-request-action": "pull-request-action"
      }
    },
    "choose-reviewer": {
      "path": "./services/choose-reviewer",
      "options": {
        "steps": [
          "./services/choose-reviewer/remove_author",
          "./services/choose-reviewer/remove_already_reviewers",
          "./services/choose-reviewer/commiters",
          "./services/choose-reviewer/random",
          "./services/choose-reviewer/load",
          "./services/choose-reviewer/sort",
          "./services/choose-reviewer/total_number"
        ],
        "stepOptions": {
          "load": { "max": 1 },
          "random": { "max": 5 },
          "commiters": {
            "max": 4,
            "since": [4, "month"],
            "filesToCheck": 5,
            "commitsCount": 10,
            "ignore": [
              "config"
            ]
          },
          "totalNumber": { "max": 1 }
        }
      },
      "dependencies": {
        "team": "choose-team",
        "model": "model",
        "logger": "logger",
        "events": "events",
        "github": "github"
      }
    },
    "review-autoassign": {
      "path": "./services/review-autoassign",
      "dependencies": [
        "events",
        "logger",
        "choose-reviewer",
        "pull-request-action"
      ]
    },
    "command": {
      "path": "./services/command",
      "options": {
        "events": ["github:issue_comment"],
        "commands": [
          {
            "test": "\/start",
            "handlers": ["./services/command/start"]
          },
          {
            "test": "\/?ok|\/?ок",
            "handlers": ["./services/command/ok"]
          },
          {
            "test": "\/?!ok|\/?!ок$$",
            "handlers": ["./services/command/not_ok"]
          },
          {
            "test": "\/busy",
            "handlers": ["./services/command/busy"]
          },
          {
            "test": "\/change",
            "handlers": ["./services/command/change"]
          }
        ]
      },
      "dependencies": [
        "events",
        "logger",
        "choose-team",
        "choose-reviewer",
        "pull-request-action"
      ]
    },
    "review-badges": {
      "path": "./services/review-badges",
      "options": {
        "url": "http://localhost:8080/badges/",
        "style": "flat"
      },
      "dependencies": [
        "events",
        "pull-request-github"
      ]
    },
    "jabber": {
      "path": "./services/jabber",
      "dependencies": [
        "logger"
      ]
    },
    "review-notification": {
      "path": "./services/review-notification",
      "options": {
        "events": {
          "review:started": "./services/review-notification/start"
        },
        "transport": "jabber"
      },
      "dependencies": [
        "events",
        "jabber"
      ]
    }
  }
}
